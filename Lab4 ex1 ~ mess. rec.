public class MessageRecording {
    private static MessageRecording instance;
    private String message;

    private MessageRecording() {
        // Private constructor to prevent instantiation.
    }

    public static MessageRecording getInstance() {
        if (instance == null) {
            instance = new MessageRecording();
        }
        return instance;
    }

    public void recordMessage(String message) {
        this.message = message;
    }

    public String getMessage() {
        return message;
    }

    public static void main(String[] args) {
        // Get the singleton instance
        MessageRecording messageRecording = MessageRecording.getInstance();

        // Record a message
        messageRecording.recordMessage("Hello, World!");

        // Get the recorded message
        String recordedMessage = messageRecording.getMessage();

        // Print the recorded message
        System.out.println("Recorded Message: " + recordedMessage);
    }
}
