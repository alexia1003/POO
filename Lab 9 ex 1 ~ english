import java.util.Scanner;

public class ThreadApplication extends Thread {
  
  //public void run() { }
  
  
  
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    System.out.println("Dati o val intre 1 si 10.");
    int numThreads = sc.nextInt();
    
    if(numThreads < 1 && numThreads > 10)
    { System.out.println("Eroare!");
    
    while(numThreads == 1)
    { ThreadApplication x = new ThreadApplication();
    }
    
    try {
      ThreadApplication obj = new ThreadApplication();
      throw new RuntimeException();
    }
    catch (Exception e) {
 
    System.out.println("Another thread is not supported");
  }
    //int runner = new ThreadApplication();
    //runner.start();
    
    }
  }
}
